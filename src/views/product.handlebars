<h1 class="text-center my-5">{{productToRender.searchedProduct.title}}</h1>

<section class="container">
    <div class="row">

        <div class="col">
            {{!-- div imagen --}}
            <img src="{{productToRender.searchedProduct.thumbnail}}" class="img-fluid"
                alt="{{productToRender.searchedProduct.title}}">
        </div>
        <div class="col d-flex flex-column justify-content-start">
            {{!-- div contenido --}}
            <h2 class="">Descripcion:</h2>
            <p>{{productToRender.searchedProduct.description}}</p>
            <ul class="list-group list-group-flush">
                <li class="list-group-item">codigo:{{productToRender.searchedProduct.code}}</li>
                <li class="list-group-item">stock: {{productToRender.searchedProduct.stock}}</li>
                <li class="list-group-item">categoria: {{productToRender.searchedProduct.category}}</li>
                <li class="list-group-item text-success">status: {{productToRender.searchedProduct.productStatus}}</li>
            </ul>
            <div class="form-floating mb-3">
                <input type="number" class="form-control" id="productQuantity" placeholder="1">
                <label for="productQuantity">Cantidad:</label>
            </div>
            <button type="button" class="btn btn-success w-100 addCartButton" id="{{productToRender.searchedProduct._id}}">
                AÃ±adir alcarrito</button>
        </div>

    </div>
</section>

<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script src="/socket.io/socket.io.js"></script>
