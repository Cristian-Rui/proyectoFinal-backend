<h1>Carrito: </h1>
<section class="container">
    {{#each productList}}
    <div class="card mb-3 row" >
        <div class="row g-0">
            <div class="col-md-2">
                <img src="{{this.product.thumbnail}}" class="bd-placeholder-img img-fluid rounded-start" width="100%" height="75" alt="{{this.product.title}}">
            </div>
            <div class="col-md-10 d-flex flex-row">
                <div class="card-body">
                    <h2 class="card-title">{{this.product.title}}</h2>
                    <h3 class="card-text">cantidad: {{this.quantity}}</h3>
                </div>
                <div class="card-body">
                    <h4>precio unitario: ${{this.product.price}}</h4>
                    <h4>precio total: $ {{this.totalPrice}}</h4>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</section>